
<div>
  <% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>
</div>

<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>

    <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_package" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="arrival_date_box">
          Supposed to arrive on
        </label>

        <input type="date" id="arrival_date_box" name="query_arrival_date">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>

<div class="waiting_on">
  <h2>Waiting on</h2>

  <ul>
    <% @waiting_on_packages.each do |package| %>

      <li>
        <div><%= package.description %></div>

        <% unless package.arrived %>
          <div style="color: red">
          <% else %>
            <div>
            <% end %>
            Supposed to arrive on
            <%=  package.arrival_date %>
          </div>

          <div>
            <%=  package.details %>
          </div>

          <div>
            <form action="/modify_package/<%= package.id %>" method="post">
              <input type="hidden" name="arrived" value="true">

              <button>Mark as received</button>
            </form>
          </div>

          <br>
        </li>
      <% end %>
    </ul>
  </div>

  <hr>

  <div class="received">
    <h2>Received</h2>

    <ul>

      <% @received_packages.each do |package| %>

        <li>
          <div><%= package.description %></div>

          <div>
            <small>
              Updated <%= ((Time.current - package.updated_at) / 60).to_i %> minutes ago

              <a href="/delete_package/<%= package.id %>">Delete</a>
            </small>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
